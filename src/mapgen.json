{
    "name": [ "mapgen" ],

    "description": "Map generator for HNCO",

    "version": "0.8",

    "nocategory": true,

    "flags": {

        "surjective":
        {
            "description": "Ensure that the sampled linear or affine map is surjective",
            "category": "nocategory"
        }

    },

    "parameters": {

        "seed":
        {
            "type": "int",
            "value": 0,
            "description": "Seed for the random number generator",
            "category": "nocategory"
        },

        "map":
        {
            "optchar": "M",
            "type": "int",
            "value": 1,
            "description": "Type of map",
            "category": "nocategory",
            "alternatives":
            [

                {
                    "value": 1,
                    "description": "Translation"
                },

                {
                    "value": 2,
                    "description": "Permutation"
                },

                {
                    "value": 3,
                    "description": "Composition of permutation and translation"
                },

                {
                    "value": 4,
                    "description": "Linear"
                },

                {
                    "value": 5,
                    "description": "Affine"
                }

            ]

        },

        "input_size":
        {
            "optchar": "x",
            "type": "int",
            "value": 100,
            "description": "Input bit vector size",
            "category": "nocategory"
        },

        "output_size":
        {
            "optchar": "y",
            "type": "int",
            "value": 100,
            "description": "Output bit vector size",
            "category": "nocategory"
        },

        "path":
        {
            "optchar": "p",
            "type": "string",
            "value": "nopath",
            "description": "Path (relative or absolute) of a map file",
            "category": "nocategory",
            "file": "open"
        }

    }

}
