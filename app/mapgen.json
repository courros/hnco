{
    "name": [ "mapgen" ],

    "description": "Map generator for HNCO",

    "version": "0.13",

    "flags": {

        "surjective":
        {
            "description": "Ensure that the sampled linear or affine map is surjective"
        }

    },

    "parameters": {

        "seed":
        {
            "type": "int",
            "value": 0,
            "description": "Seed for the random number generator"
        },

        "map":
        {
            "optchar": "M",
            "type": "int",
            "value": 1,
            "description": "Type of map",
            "alternatives":
            [

                {
                    "value": 1,
                    "description": "Translation"
                },

                {
                    "value": 2,
                    "description": "Permutation"
                },

                {
                    "value": 3,
                    "description": "Composition of permutation and translation"
                },

                {
                    "value": 4,
                    "description": "Linear"
                },

                {
                    "value": 5,
                    "description": "Affine"
                },

                {
                    "value": 6,
                    "description": "Affine (product of transvections)"
                }

            ]

        },

        "input_size":
        {
            "optchar": "x",
            "type": "int",
            "value": 100,
            "description": "Input bit vector size"
        },

        "output_size":
        {
            "optchar": "y",
            "type": "int",
            "value": 100,
            "description": "Output bit vector size"
        },

        "sequence_length":
        {
            "optchar": "t",
            "type": "int",
            "value": 10,
            "description": "Length of sequence of transvections"
        },

        "path":
        {
            "optchar": "p",
            "type": "string",
            "value": "map.txt",
            "description": "Path (relative or absolute) of a map file"
        }

    }

}
