{
    "exec": "hnco",
    "opt": "--print-results --map 1 --map-random -s 100",
    "budget": 100000,

    "num_runs": 10,
    "parallel": true,

    "functions": [

        {
            "id": "one-max",
	    "opt": "-F 0 --stop-on-maximum"
        },

        {
            "id": "leading-ones",
	    "opt": "-F 10 --stop-on-maximum"
        },

        {
            "id": "ridge",
	    "opt": "-F 11 --stop-on-maximum"
        }

    ],

    "algorithms": [

        {
            "id": "rls",
	    "opt": "-A 100 --restart"
        },

        {
            "id": "hc",
	    "opt": "-A 150 --restart"
        },

        {
            "id": "sa",
	    "opt": "-A 200 --sa-beta-ratio 1.05 --sa-num-trials 10"
        },

        {
            "id": "ea-1p1",
	    "opt": "-A 300"
        },

        {
            "id": "ea-1p10",
	    "opt": "-A 310 --ea-mu 1 --ea-lambda 10"
        },

        {
            "id": "ea-10p1",
	    "opt": "-A 310 --ea-mu 10 --ea-lambda 1"
        },

        {
            "id": "ga",
	    "opt": "-A 400 --ea-mu 100"
        },

        {
            "id": "pbil",
	    "opt": "-A 500 -l 5e-3"
        },

        {
            "id": "umda",
	    "opt": "-A 600 -x 100 -y 10"
        }

    ]

}
