{
    "exec": "hnco",
    "opt": "--print-results --map 1 --map-random -s 100",
    "budget": 200000,

    "num_runs": 20,
    "parallel": true,

    "parameter": {
        "id": "fn-threshold",
        "values": [ 0, 5, 10, 15, 20, 25, 30, 35 ]
    },

    "graphics": {
        "logscale": true,
        "candlesticks": {
            "boxwidth": "$1 * 0.3"
        }
    },

    "functions": [

        {
            "id": "jump",
            "name": "Jump",
	    "opt": "-F 30 --stop-on-maximum",
            "rounding": {
                "value": { "before": 3, "after": 0 },
                "time": { "before": 1, "after": 2 } }
        },

        {
            "id": "four-peaks",
            "name": "Four Peaks",
	    "opt": "-F 40 --stop-on-maximum",
            "rounding": {
                "value": { "before": 3, "after": 0 },
                "time": { "before": 1, "after": 2 } }
        }

    ],

    "algorithms": [

        {
            "id": "rls",
	    "opt": "-A 100 --restart"
        },

        {
            "id": "hc",
	    "opt": "-A 150 --restart"
        },

        {
            "id": "sa",
	    "opt": "-A 200 --sa-beta-ratio 1.05 --sa-num-trials 10"
        },

        {
            "id": "ea-1p1",
	    "opt": "-A 300"
        },

        {
            "id": "ea-1p10",
	    "opt": "-A 310 --ea-mu 1 --ea-lambda 10"
        },

        {
            "id": "ea-10p1",
	    "opt": "-A 310 --ea-mu 10 --ea-lambda 1"
        },

        {
            "id": "ea-1c10",
	    "opt": "-A 320 --ea-mu 1 --ea-lambda 10 --allow-stay"
        },

        {
            "id": "ga",
	    "opt": "-A 400 --ea-mu 100"
        },

        {
            "id": "pbil",
	    "opt": "-A 500 -r 5e-3"
        },

        {
            "id": "umda",
	    "opt": "-A 600 -x 100 -y 10"
        }

    ]

}
